.foodname text{
    font-size:48rpx;
    color:red;
    display:inline-block;
    width:200rpx;
}
.foodname text,.foodprice text,.fooddiscount text,.foodnum text{
    display: inline-block;
    width:100px;
}
.foodname,.foodprice,.fooddiscount,.foodnum{
    display: inline-block;
    padding:10rpx 20rpx;
}
.foodnum{
    width:100%;
    border-bottom:1px solid #ccc;
}
.spec button{
    width:120rpx;
    font-size:24rpx;
    height:60rpx;
    display: inline-block;
    vertical-align: middle;
    margin:0 20rpx;
}
.spec button.selected{
    background:#e4393c;
    color:white;
}
.ajustnum input,.ajustnum button{
    width:100rpx;
    font-size:28rpx;
    height:60rpx;
    display: inline-block;
    vertical-align: middle;
}

.ajustnum input{
    border:1rpx solid #ccc;
    text-align:center;
    height:54rpx;
}

.buyinfo,.spec,.ajustnum{
    margin-top:20rpx;
    padding:0 20rpx;
}
.buyinfo text,.spec text,.ajustnum text{
    margin-right: 20rpx;
    font-size: 32rpx;
}
.confirmbtncontainer{
    background:white;
    font-size:28rpx;
    height: 64rpx;
    margin-top:40rpx;
    position:fixed;
    bottom:0;
    left:0;
    right:0;
    padding:20rpx 0;
}
.conform{
    width:90%;
    font-size:28rpx;
}

.goodDetail{
    font-size:28rpx;
    padding:0 20rpx;
    line-height:40rpx;
}

.goodDetail text{
    font-size:36rpx;
}
